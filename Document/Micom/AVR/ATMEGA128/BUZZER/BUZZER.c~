void set_led(u08 n)
{
	switch(n)
	{
	 case 0: LED_PORT = 0x00;  break; 
	 case 1: LED_PORT = 0x01;  break; 
	 case 2: LED_PORT = 0x03;  break;
	 case 3: LED_PORT = 0x07;  break;
	 case 4: LED_PORT = 0x0F;  break;
	 case 5: LED_PORT = 0x1F;  break;
	 case 6: LED_PORT = 0x3F;  break;
	 case 7: LED_PORT = 0x7F;  break;
	 case 8: LED_PORT = 0xFF;  break;  	
	 default: LED_PORT = 0; break;	
	}
}

